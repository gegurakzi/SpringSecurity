{{>layout/header}}

<section class="">
    <div class="container py-5 w-100">
        <div class="container py-5 w-50 justify-content-center">
            <div class="row">
                <h1 class="text-center">로그인 페이지</h1>
            </div>
            <hr/>
            <div class="row justify-content-center">
                <form action="/login/process" method="POST" class="py-5 col-6 needs-validation" novalidate>
                    <input class="form-control" type="text" name="username" placeholder="User name" required/> <br/>
                    <input class="form-control" type="text" name="password" placeholder="Password" required/> <br/>
                    <button type="submit" class="btn btn-primary float-end">로그인</button>
                </form>
                <a href="/register" class="text-muted text-center" ><small>아직 회원이 아니신가요?</small></a>
            </div>
        </div>
    </div>
</section>

