{{>layout/header}}

<section class="lg">
    <div class="container py-5 w-100">
        <div class="container px-5 py-5 w-50 justify-content-center round-3 bg-light">
            <div class="row">
                <h1 class="text-center">로그인 페이지</h1>
            </div>
            <hr class="mx-5"/>
            <div class="row justify-content-center">
                <form action="/login/process" method="POST" class="pt-5 col-6 needs-validation" novalidate>
                    <input class="form-control" type="text" name="username" placeholder="User name" required/> <br/>
                    <input class="form-control" type="text" name="password" placeholder="Password" required/> <br/>
                    <button type="submit" class="btn btn-primary float-end">로그인</button>
                </form>
                <div class="py-2">
                    <p class="text-center text-muted"><small>다른 플랫폼으로 로그인하기</small></p>
                    <div class="d-flex justify-content-center">
                        <a href="/oauth2/authorization/google" class="d-inline-flex text-muted" >
                            <img src="/icon/google.svg", style="width: 24px; height: 24px">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex py-2 justify-content-center">
            <a href="/register" class="text-muted" ><small>아직 회원이 아니신가요?</small></a>
        </div>
    </div>
</section>

{{>script/formValidation}}

{{>layout/footer}}